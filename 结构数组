#include <iostream>
#include <string>
using namespace std;
struct student
{
	string name;
	int age;
	int score;
};
int main()
{
	struct student stu[3]={
		{"张三", 18 , 100 },
		{"李四", 28 , 99 },
		{"王五", 38, 66 }
	};
	stu[2].name="赵六";
	
	for( int i=0; i<3; i++ ){
		cout<<"姓名:"<< stu[i].name 
		<< "年龄:"<< stu[i].age 
		<<"分数:"<<stu[i].score <<endl;
		 
	}
	
	return 0;
}
